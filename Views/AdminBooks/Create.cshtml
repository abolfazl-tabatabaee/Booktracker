@model bookTracker.Models.ViewModels.AdminBookEditVm

@{
    ViewData["Title"] = "افزودن کتاب";
    ViewData["Page"] = "admin";
}

@section Styles {
    <link rel="stylesheet" href="~/css/adminpanel.css" />
}

<div class="container main">
    <div class="admin-topbar">
        <div>
            <h1 style="margin:0;">افزودن کتاب</h1>
            <div class="muted" style="margin-top:.35rem;">آپلود کاور: jpg/png/webp (حداکثر 1MB)</div>
        </div>

        <div class="admin-tabs">
            <a asp-controller="Admin" asp-action="Index">داشبورد</a>
            <a class="is-active" asp-controller="AdminBooks" asp-action="Index">کتاب‌ها</a>
            <a asp-controller="AdminReviews" asp-action="Index">نظرات</a>
            <a asp-controller="AdminUsers" asp-action="Index">کاربران</a>
        </div>
    </div>

    <div class="surface surface-pad">
        <form asp-controller="AdminBooks" asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-row">
                <div class="field">
                    <label class="label">عنوان</label>
                    <input class="input" asp-for="Title" />
                </div>
                <div class="field">
                    <label class="label">نویسنده</label>
                    <input class="input" asp-for="Author" />
                </div>
            </div>

            <div class="form-row">
                <div class="field">
                    <label class="label">ژانر</label>
                    <input class="input" asp-for="Genre" />
                </div>
                <div class="field">
                    <label class="label">سال</label>
                    <input class="input" asp-for="Year" type="number" />
                </div>
                <div class="field">
                    <label class="label">زبان</label>
                    <input class="input" asp-for="Lang" />
                </div>
            </div>

            <!-- ✅ Upload cover -->
            <div class="field">
                <label class="label">کاور (Upload)</label>
                <input class="input" asp-for="CoverFile" type="file"
                       accept=".jpg,.jpeg,.png,.webp,image/*" />
                <div class="muted" style="margin-top:.35rem;">حداکثر 1MB — فقط jpg/png/webp</div>
                <div class="muted" style="margin-top:.35rem; color:rgba(255,90,90,.9);">
                    @Html.ValidationMessageFor(m => m.CoverFile)
                </div>
            </div>

            <div class="field">
                <label class="label">توضیحات</label>
                <textarea class="textarea" asp-for="Description" rows="5"></textarea>
            </div>

            <div class="field">
                <label class="label">تگ‌ها (TagsCsv)</label>
                <input class="input" asp-for="TagsCsv" placeholder="تگ1,تگ2,تگ3" />
            </div>

            <button class="btn btn-primary" type="submit">ذخیره</button>
            <a class="btn btn-ghost" asp-controller="AdminBooks" asp-action="Index">بازگشت</a>
        </form>
    </div>
</div>

<header class="site-header">
    <div class="container header-inner">
        <a class="brand" asp-controller="Home" asp-action="Index">
            <span class="brand-mark">📚</span>
            <span class="brand-text">کتاب‌خانه</span>
        </a>

        <nav class="nav">
            <a asp-controller="Home" asp-action="Index" class="nav-link" data-nav="home">کتاب‌ها</a>
            <a asp-controller="Home" asp-action="About" class="nav-link" data-nav="about">درباره ما</a>
            <a asp-controller="Home" asp-action="Contact" class="nav-link" data-nav="contact">تماس با ما</a>

            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Profile" asp-action="Index" class="nav-link" data-nav="profile">پروفایل</a>
            }

            @if (User?.IsInRole("Admin") ?? false)
            {
                <a asp-controller="Admin" asp-action="Index" class="nav-link" data-nav="admin">پنل ادمین</a>
            }
        </nav>

        <div class="auth">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                var fullName = User.FindFirst("FullName")?.Value;
                var displayName = string.IsNullOrWhiteSpace(fullName) ? User.Identity!.Name : fullName;

                <a class="user-pill" asp-controller="Profile" asp-action="Index" title="@displayName">
                    <span class="user-dot"></span>
                    <span class="user-name">@displayName</span>
                </a>

                <form class="logout-form" asp-controller="Auth" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-ghost" type="submit">خروج</button>
                </form>
            }
            else
            {
                <a class="btn btn-ghost" asp-controller="Auth" asp-action="Login">ورود</a>
                <a class="btn btn-primary" asp-controller="Auth" asp-action="Register">ثبت‌نام</a>
            }
        </div>

        <button class="burger" id="burgerBtn" type="button" aria-controls="mobileNav" aria-expanded="false">
            ☰
        </button>
    </div>

    <div class="mobile-nav" id="mobileNav" hidden>
        <div class="container mobile-nav-inner">
            <a asp-controller="Home" asp-action="Index" class="nav-link" data-nav="home">کتاب‌ها</a>
            <a asp-controller="Home" asp-action="About" class="nav-link" data-nav="about">درباره ما</a>
            <a asp-controller="Home" asp-action="Contact" class="nav-link" data-nav="contact">تماس با ما</a>

            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Profile" asp-action="Index" class="nav-link" data-nav="profile">پروفایل</a>
            }

            @if (User?.IsInRole("Admin") ?? false)
            {
                <a asp-controller="Admin" asp-action="Index" class="nav-link" data-nav="admin">پنل ادمین</a>
            }

            <div class="mobile-auth">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    var fullName = User.FindFirst("FullName")?.Value;
                    var displayName = string.IsNullOrWhiteSpace(fullName) ? User.Identity!.Name : fullName;

                    <a class="user-pill" asp-controller="Profile" asp-action="Index" title="@displayName">
                        <span class="user-dot"></span>
                        <span class="user-name">@displayName</span>
                    </a>

                    <form class="logout-form" asp-controller="Auth" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-ghost" type="submit">خروج</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-ghost" asp-controller="Auth" asp-action="Login">ورود</a>
                    <a class="btn btn-primary" asp-controller="Auth" asp-action="Register">ثبت‌نام</a>
                }
            </div>
        </div>
    </div>
</header>
